<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		{% render "head/title", title:title %}
		{% render "head/styles" %}
	</head>
	<body>
		<header class="cmp-site-header">
			<div class="obj-page-width">
				<div class="cmp-site-header__logo">
					<a href="/" class="cmp-site-header__logo-link" aria-label="Propulsion Home">
						{% render 'logo.svg' %}
					</a>
				</div>
			</div>
		</header>
		<div class="obj-page">
			<div class="obj-page__side util-position-relative">
				{% include 'nav' %}
			</div>
			<main class="obj-page__main">
				<header>
					<h2>{{ title }}</h2>
				</header>
				{{ content }}
			</main>
			<footer class="obj-page__foot cmp-footer">
				<div class="cmp-footer__container">
					<a href="{{ pkg.repository.url }}/blob/main/{{ page.inputPath | replace: './', '' }}">Edit this Page</a>
					<span>From your friends at <a href="https://sparkbox.com">Sparkbox</a></span>
				</div>
			</footer>
		</div>
	</body>
</html>
